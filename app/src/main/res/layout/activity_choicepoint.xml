<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoicepointActivity"
    android:orientation="vertical"
    android:id="@+id/choicePointView">

    <ImageView
        android:id="@+id/choicePointBackground"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:src="@drawable/choice_point_background_center"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/choicepointChoicePanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/choicePointBackground"
        android:layout_alignTop="@id/choicePointBackground"
        android:layout_alignEnd="@id/choicePointBackground"
        android:layout_alignBottom="@id/choicePointBackground"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:paddingTop="96dp">

            <TextView
                android:id="@+id/choicepointLeftSideText"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingEnd="16dp"
                android:text="@string/left_side_text"
                android:textAlignment="center"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/choicepointRightSideText"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="16dp"
                android:text="@string/right_side_text"
                android:textAlignment="center"
                android:textSize="36sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/choicepointCurrentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:paddingTop="96dp"
            android:text="@string/current_text"
            android:textAlignment="center"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/choicePointValueText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="22sp"
            android:paddingBottom="82sp"
            android:text="Health"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/choicePointValueText2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="22sp"
            android:paddingTop="82sp"
            android:text="Family"
            android:textAlignment="textEnd"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/choicePointScenarioText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:paddingBottom="72dp"
            android:text="@string/current_scenario"
            android:textAlignment="center"
            android:textSize="36sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16sp"
                android:text="Back"
                android:onClick="showConfirmationPopup"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16sp"
                android:text="Edit"
                android:onClick="showEditTextPopup"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/exitConfirmPopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:cardCornerRadius="8dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exit the activity?"
                    android:textAlignment="center"
                    android:textSize="36sp"
                    android:paddingTop="32dp"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    >
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exit"
                        android:layout_weight="1"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:onClick="goBack"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stay"
                        android:layout_weight="1"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:onClick="hideConfirmationPopup"/>
                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/editTextPopup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:cardCornerRadius="8dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="36sp"
                    android:paddingTop="32dp"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Situation:"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:paddingLeft="32dp"
                        android:paddingRight="8dp"/>
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Away:"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:paddingLeft="32dp"
                        android:paddingRight="8dp"/>
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Towards:"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:paddingLeft="32dp"
                        android:paddingRight="8dp"/>
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Strategies:"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:paddingLeft="32dp"
                        android:paddingRight="8dp"/>
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Values:"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:paddingLeft="32dp"
                        android:paddingRight="8dp"/>
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Difficult feelings:"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:paddingLeft="32dp"
                        android:paddingRight="8dp"/>
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    >
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:layout_weight="1"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:onClick="hideEditTextPopup"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:layout_weight="1"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:onClick="hideEditTextPopup"/>
                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>



    </RelativeLayout>

</RelativeLayout>